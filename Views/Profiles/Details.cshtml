@model SocialBook.Models.Profile

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Profile</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstMidName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>

        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posts)
        </dt> 
        <div class="card-header">
        <table class="friends-box">

            @foreach (var item in Model.Posts)
                {
                    <tr>
                        <dd class="col-sm-10">
                            <img src="@("~/image/" + item.ImageName)" asp-append-version="true" width="350px" height="350px"/>
                        </dd>
                       
                        <dt>
                            @Html.DisplayNameFor(modelItem => item.Status) : @Html.DisplayFor(modelItem => item.Status)
                        </dt>
                        
                        <dt>
                           @Html.DisplayNameFor(modelItem => item.Content) : @Html.DisplayFor(modelItem => item.Content)
                        </dt>
                    </tr>
                }
            </table>
            </div>
           
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProfileId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
